<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="./stylesheets/seller.css" />
  </head>

  <body>
    <div class="container">
      <form id="seller-form" class="form-vertical" action="/seller" method="post">
        <input
          class="input"
          type="text"
          name="bookname"
          placeholder="Enter Book Name"
          required
        />
        <input
          class="input"
          type="text"
          name="isbn"
          placeholder="Enter ISBN of Book"
          required
        />
        <input
          class="input"
          type="text"
          name="edition"
          placeholder="Enter Edition of Book"
          required
        />
        <input class="input ct" type="submit" value="Submit" />
      </form>
    </div>
  </body>
</html>
